<?xml version='1.0' encoding='utf-8'?>
<widget id="com.scrisstudio" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Linx Example</name>
    <description>
        A sample Apache Cordova application.
    </description>
    <author email="slaaker@126.com" href="http://scris.top">
        Dominik Qiu from Scris Studio
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="StatusBarStyle" value="lightcontent" />
</widget>
